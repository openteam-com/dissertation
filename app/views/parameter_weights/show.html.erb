<%= render :partial => 'commons/breadcrumbs' %>
<%= link_to edit_software_product_grouping_parameter_weight_path(@software_product, @grouping, @parameter_weight), :class =>"btn btn-warning pull-right", :title => "Редактировать" do %>
  <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
<% end %>
<table class="table table-striped">
  <thead>
    <th>Название</th>
    <th>Значение</th>
    <th>Нормализованное значение</th>
  </thead>
  <tbody>
    <% (1..10).each do |index| %>
      <tr>
        <td><%= I18n.t("simple_form.labels.alternative.parameter#{index}") %></td>
        <td><%= @parameter_weight.send("parameter#{index}") %></td>
        <td><%= @parameter_weight.normalize_weight(index) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
