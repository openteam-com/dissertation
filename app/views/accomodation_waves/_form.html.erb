<%= render :partial => 'commons/breadcrumbs' %>
<%= simple_form_for [@software_product, @grouping, @alternative, @accomodation_wave], html: { class: 'form-horizontal' }, wrapper: :horizontal_form,
  wrapper_mappings: {
  check_boxes: :horizontal_radio_and_checkboxes,
} do |f| %>
  <%= f.input :duration %>
  <%= f.input :budget %>
  <%= f.input :advertising_tools, :as => :check_boxes, :collection => @alternative.grouped_advertising_tools.keys, :include_hidden => false, :checked => @accomodation_wave.advertising_tools << true %>
  <%= f.button :submit, :class => "pull-right btn-success" %>
<% end %>
