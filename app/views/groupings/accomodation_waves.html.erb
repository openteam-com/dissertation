<%= render :partial => 'commons/breadcrumbs' %>
<div class="table-responsive">
  <table class="table table-hover table-condensed table-bordered">
    <thead>
      <th>Название</th>
      <th>Волны размещения</th>
    </thead>
    <tbody>
      <% @alternatives.each do |alternative| %>
        <tr>
          <td><%= alternative.segment_full_name %></td>
          <td>
            <%= link_to new_software_product_grouping_alternative_accomodation_wafe_path(@software_product, @grouping, alternative), :title => "Добавить волну", :class => "pull-right" do %>
              <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
            <% end %>
            <% alternative.accomodation_waves.each_with_index do |wave, index| %>
              <p>
                Волна № <%= index + 1 %> <em>(продолжительность<%= wave.duration %>)</em>:
                <%= link_to edit_software_product_grouping_alternative_accomodation_wafe_path(@software_product, @grouping, alternative, wave), :title => "Редактировать волну" do %>
                  <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                <% end %>
                <%= link_to software_product_grouping_alternative_accomodation_wafe_path(@software_product, @grouping, alternative, wave), :title => "Удалить волну", :method => :delete, :data => {:confirm => "Вы уверены?"} do %>
                  <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                <% end %>
              </p>
              <ul>
                <% wave.advertising_platforms.each do |platform| %>
                  <li>
                    <%= link_to platform.title, platform.url, :target => :_blank %>
                    <%= link_to edit_software_product_grouping_alternative_accomodation_wafe_advertising_platform_path(@software_product, @grouping, alternative, wave, platform), :title => "Редактировать площадку" do %>
                      <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                    <% end %>
                    <% platform.advertising_places.each do |place| %>
                      <p><strong>Среднесуточное количество показов:</strong> <%= place.views_quantity %></p>
                      <p><strong><%= place.price_type_text%>:</strong> <%= place.price %></p>
                    <% end %>
                  </li>
                <% end %>
              </ul>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
